{
  "name": "regtic",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "concurrently --kill-others --prefix \"[{name}]\" --names \"webapp,backend\" --prefix-colors \"black,blue\" \"npm run start:webapp\" \"npm run start:backend\"",
    "start:backend": "npm run is-docker-running && concurrently --kill-others --prefix \"[{name}]\" --names \"db,serverless,api\" --prefix-colors \"dim,blue,magenta\" \"npm run start:db\" \"npm run start:serverless\" \" npm run start:api\"",
    "start:webapp": "cd app && npm run serve",
    "start:db": "docker-compose up",
    "start:serverless": "serverless offline --showDuration --noTimeout",
    "start:api": "cd api && make build && sam local start-api -p 3030",
    "is-docker-running": "docker ps > /dev/null",
    "lint:js": "eslint --fix .",
    "lint:py": "black .",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexdor/regtic.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@typescript-eslint/parser": "^2.5.0",
    "concurrently": "^5.0.0",
    "serverless-iam-roles-per-function": "^2.0.2",
    "typescript": "^3.6.4"
  },
  "devDependencies": {
    "@ljharb/eslint-config": "^14.1.0",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "serverless-offline": "^5.12.0",
    "serverless-python-requirements": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,ts,vue,html}": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json,yml,css}": [
      "prettier --write",
      "git add"
    ],
    "*.py": [
      "black",
      "git add"
    ],
    "*.go": [
      "gofmt -w",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  }
}
